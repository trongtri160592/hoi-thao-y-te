<div class="col-md-10">
  <p>
    <%= link_to_unless I18n.locale == :vi, "Tiếng Việt", locale: :vi %>
    |
    <%= link_to_unless I18n.locale == :en, "English", locale: :en %>
  </p>
  <!-- banner -->
  <div id="banner" class="row" style="padding: 0px; overflow:hidden;">
    <div class="col-xs-12">
      <a class="logo" href="#">
        <!-- place your image here -->
        <%= image_tag "banner.png", alt: "company logo", style: "width: 100%;" %>
      </a>
    </div>
  </div>
  <!-- end banner -->

  <div class="card-columns">
    <% if false %>
        <div class="card card-inverse animated fadeInLeft">
          <%= image_tag "don-vi-to-chuc.jpg", alt: "Đơn vị tổ chức", class: "img-responsive" %>
          <div class="card-img-overlay">
            <div class="card-title">Đơn vị tổ chức</div>
          </div>
        </div>
        <div class="card card-inverse animated fadeInDown">
          <%= image_tag "thong-tin-hoi-thao.jpg", alt: "Thông tin hội thảo", class: "img-responsive" %>
          <div class="card-img-overlay">
            <div class="card-title">Thông tin hội thảo</div>
          </div>
        </div>
        <div class="card card-inverse animated fadeInRight">
          <%= image_tag "chuong-trinh-hoi-thao.png", alt: "Chương trình hội thảo", class: "img-responsive" %>
          <div class="card-img-overlay">
            <div class="card-title">Chương trình hội thảo</div>
          </div>
        </div>
        <div class="card card-inverse animated fadeInDown">
          <%= image_tag "khach-san.jpg", alt: "Khách sạn và du lịch", class: "img-responsive" %>
          <div class="card-img-overlay">
            <div class="card-title">Khách sạn và du lịch</div>
          </div>
        </div>
        <div class="card card-inverse animated fadeInRight">
          <%= image_tag "hanoi.jpg", alt: "Thông tin về hà nội", class: "img-responsive" %>
          <div class="card-img-overlay">
            <div class="card-title">Thông tin về hà nội</div>
          </div>
        </div>
        <!-- .end Card -->

        <!-- Card -->
        <div class="card card-inverse animated fadeInRight">
          <%= image_tag "nha-tai-tro.jpg", alt: "Nhà tài trợ", class: "img-responsive" %>
          <div class="card-img-overlay">
            <div class="card-title">Nhà tài trợ</div>
          </div>
        </div>
    <% end %>

    <a href="/en/dang-ky">
      <div class="card card-inverse animated fadeInLeft">
        <%= image_tag "dang-ky.jpg", alt: "Registration", class: "img-responsive" %>
        <div class="card-img-overlay">
          <div class="card-title">Registration</div>
        </div>
      </div>
    </a>

    <% @contents.each do |content| %>
        <a href="/en/noi-dung/<%= content.id %>">
          <div class="card card-inverse animated fadeInRight">
            <%= image_tag content.image, alt: content.english_title, class: "img-responsive" %>
            <div class="card-img-overlay">
              <div class="card-title"><%= content.english_title %></div>
            </div>
          </div>
        </a>
    <% end %>

  </div>

  <!--Footer-->
  <footer>
    <ul id="scroller" class="simply-scroll-list">
      <% @sponsors.each do |sponsor| %>
          <li><%= image_tag sponsor.logo, class: "sponsor" %>
      <% end %>
    </ul>
  </footer>
</div>
<!--/.Footer-->
<div id="left-side-info" class="col-md-2">
  <div class="current-weather">
    <a href="https://www.accuweather.com/vi/vn/hanoi/353412/weather-forecast/353412" class="aw-widget-legal">
      <!--
      By accessing and/or using this code snippet, you agree to AccuWeather’s terms and conditions (in English) which can be found at https://www.accuweather.com/en/free-weather-widgets/terms and AccuWeather’s Privacy Statement (in English) which can be found at https://www.accuweather.com/en/privacy.
      -->
    </a>

    <div id="awcc1506096222231" class="aw-widget-current" data-locationkey="353412" data-unit="c" data-language="en" data-useip="false" data-uid="awcc1506096222231"></div>
    <div id="overlay"></div>
    <script type="text/javascript" src="https://oap.accuweather.com/launch.js"></script>
  </div>

  <!-- running news -->
  <div id="running-news">
    <% if @news %>
        <h6><b>News</b></h6>
        <span behavior="scroll" direction="up" style="word-wrap: break-word;"><%= @news.english_content.html_safe if @news.english_content %></span>
    <% end %>
  </div>
  <!-- end runnig news -->
</div>