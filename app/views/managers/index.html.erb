<% if current_user %>
<div class="col-md-3">
  <div class="list-group">
    <a class="list-group-item" href="/"><i class="fa fa-home fa-fw" aria-hidden="true"></i>&nbsp; Trang chủ</a>
    <a class="list-group-item active" href="/quan-ly"><i class="fa fa-book fa-fw" aria-hidden="true"></i>&nbsp; Danh mục</a>
    <a class="list-group-item" href="/sponsors"><i class="fa fa-money fa-fw" aria-hidden="true"></i>&nbsp; Tài trợ</a>
    <a class="list-group-item" href="/registrars"><i class="fa fa-list fa-fw" aria-hidden="true"></i>&nbsp; Danh sách đăng ký</a>
    <a class="list-group-item" href="/news"><i class="fa fa-newspaper-o fa-fw" aria-hidden="true"></i>&nbsp; News</a>
    <a class="list-group-item" href="/logout"><i class="fa fa-sign-out fa-fw" aria-hidden="true"></i>&nbsp; Đăng xuất</a>
  </div>
</div>
<div class="col-md-9">
  <a class="btn btn-primary" href="/content/new"><i class="fa fa-plus" aria-hidden="true"></i></a></br>
  <table class = "table table-bordered table-striped">
    <thead>.
    <tr>
      <th>Tên</th>
      <th>Ảnh</th>
      <th> </th>
	  <th> </th>
    </tr>
    </thead>

    <tbody>
    <% @contents.each do |content| %>
        <tr>
          <td><%= content.title %></td>
          <td><%= link_to "Xem ảnh", content.image.url %></td>
		  <td><%= link_to ("<i class='fa fa-pencil-square'></i>&nbsp;Sửa").html_safe, "/contents/edit/#{content.id}", class: "btn btn-primary" %></td>
          <td><%= link_to ("<i class='fa fa-trash'></i></i>&nbsp;Xóa").html_safe, "/contents/#{content.id}", method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{content.title}?" %></td>
		</tr>
    <% end %>
    </tbody>

  </table>
</div>

<% else %>
    <h1> Bạn phải <%= link_to "đăng nhập", "/admin" %> để xem được trang này</h1>
<% end %>