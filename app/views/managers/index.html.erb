<% if current_user %>
<div class="col-md-3">
  <div class="list-group">
    <a class="list-group-item" href="/"><i class="fa fa-home fa-fw" aria-hidden="true"></i>&nbsp; Trang chủ</a>
    <a class="list-group-item active" href="/quan-ly"><i class="fa fa-book fa-fw" aria-hidden="true"></i>&nbsp; Danh mục</a>
    <a class="list-group-item" href="#"><i class="fa fa-money fa-fw" aria-hidden="true"></i>&nbsp; Tài trợ</a>
    <a class="list-group-item" href="/registrars"><i class="fa fa-list fa-fw" aria-hidden="true"></i>&nbsp; Danh sách đăng ký</a>
    <a class="list-group-item" href="/logout"><i class="fa fa-sign-out fa-fw" aria-hidden="true"></i>&nbsp; Đăng xuất</a>
  </div>
</div>
<div class="col-md-9">
  <a class="btn btn-primary" href="/content/new"><i class="fa fa-plus" aria-hidden="true"></i></a></br>
  <table class = "table table-bordered table-striped">
    <thead>.
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th> </th>
    </tr>
    </thead>

    <tbody>
    <% @contents.each do |content| %>

        <tr>
          <td><%= content.title %></td>
          <td><%= link_to "Download image", content.image.url %></td>
          <td><%= button_to "Delete", content, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{content.title}?" %></td>
        </tr>

    <% end %>
    </tbody>

  </table>
</div>

<% else %>
    <h1> Bạn phải <%= link_to "đăng nhập", "/logout" %> để xem được trang này</h1>
<% end %>